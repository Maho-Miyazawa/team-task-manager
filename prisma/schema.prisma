// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String      @id
  team_id    Int
  name       String
  team       teams    @relation(fields: [team_id], references: [id])
  tasks      tasks[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model tasks {
  id          Int         @id @default(autoincrement())
  user_id     String
  task        String
  progress_id Int         @default(1)
  priority_id Int
  is_deleted  Boolean     @default(false)
  user        users       @relation(fields: [user_id], references: [id])
  progress    progress?   @relation(fields: [progress_id], references: [id])
  priority    priorities? @relation(fields: [priority_id], references: [id])
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
}

model teams {
  id         Int      @id
  name       String
  users      users[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model priorities {
  id         Int      @id
  level      String
  tasks      tasks[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model progress {
  id         Int      @id
  level      String
  tasks      tasks[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
